<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Blog\Infrastructure\Doctrine\Entity\BlogUser" table="blog_user">
        <id name="blog" association-key="true"/>
        <id name="userId" type="integer" column="user_id"/>

        <many-to-one field="blog" target-entity="App\Blog\Infrastructure\Doctrine\Entity\Blog" inversed-by="blogUsers">
            <join-column name="blog_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
        </many-to-one>

        <field name="role" type="string" enum-type="App\Blog\Domain\Enum\BlogUserRole" column="role" nullable="false"/>
    </entity>
</doctrine-mapping>

