<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Blog\Infrastructure\Doctrine\Entity\Subscription"
            table="subscription"
            repository-class="App\Blog\Infrastructure\Repository\SubscriptionRepository">
        <unique-constraints>
            <unique-constraint columns="blog_id,user_id" name="UNIQ_SUBSCRIPTION_BLOG_USER"/>
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <many-to-one field="blog" target-entity="App\Blog\Infrastructure\Doctrine\Entity\Blog" inversed-by="subscriptions">
            <join-column name="blog_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
        </many-to-one>
        <field name="subscriberId" type="integer" column="user_id" nullable="false"/>
        <field name="createdAt" type="datetime_immutable" column="created_at" nullable="true"/>
        <field name="updatedAt" type="datetime_immutable" column="updated_at" nullable="true"/>
    </entity>
</doctrine-mapping>
