<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Blog\Infrastructure\Doctrine\Entity\Comment" table="comment">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="userId" type="integer" column="user_id" nullable="true"/>
        <field name="content" type="text" column="content" nullable="false"/>

        <many-to-one field="post" target-entity="App\Blog\Infrastructure\Doctrine\Entity\Post" inversed-by="comments">
            <join-column name="post_id" referenced-column-name="id" nullable="true"/>
        </many-to-one>

        <field name="createdAt" type="datetime_immutable" column="created_at" nullable="true"/>
        <field name="updatedAt" type="datetime_immutable" column="updated_at" nullable="true"/>
    </entity>
</doctrine-mapping>
