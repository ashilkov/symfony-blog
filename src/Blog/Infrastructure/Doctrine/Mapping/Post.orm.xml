<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Blog\Infrastructure\Doctrine\Entity\Post" table="post">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="content" type="text" column="content" nullable="true"/>
        <field name="userId" type="integer" column="user_id" nullable="false"/>
        <field name="title" type="string" length="255" column="title" nullable="true"/>

        <many-to-one field="blog" target-entity="App\Blog\Infrastructure\Doctrine\Entity\Blog" inversed-by="posts">
            <join-column name="blog_id" referenced-column-name="id" nullable="true"/>
        </many-to-one>

        <one-to-many field="comments" target-entity="App\Blog\Infrastructure\Doctrine\Entity\Comment" mapped-by="post"/>

        <field name="createdAt" type="datetime_immutable" column="created_at" nullable="true"/>
        <field name="updatedAt" type="datetime_immutable" column="updated_at" nullable="true"/>
    </entity>
</doctrine-mapping>
